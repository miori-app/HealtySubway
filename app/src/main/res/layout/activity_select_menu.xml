<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectMenu">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/main_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/subwaygreen"
            app:tabIndicatorHeight="5sp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/subwaygreen"
            app:tabTextAppearance="@style/tab_item_text">


            <com.google.android.material.tabs.TabItem
                android:id="@+id/pick_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메뉴" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/pick_bread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빵" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/pick_cheese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="치즈" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/pick_veg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="야채" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/pick_sauce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소스" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/pick_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가" />
        </com.google.android.material.tabs.TabLayout>
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>